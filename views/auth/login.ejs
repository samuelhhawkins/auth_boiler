<h1>Login</h1>
<p>Returning to the site? Come on in!</p>
<div class="row">
  <form class="col s12" method="POST" action="/auth/login">
    <div class="row">
      <div class="input-field col s6">
        <input placeholder="Email goes here" id="email" type="text" class="validate" name ='email'>
        <label for="email">Email</label>
      </div>
      <div class="input-field col s6">
        <input id="password" type="password" class="validate" name ='password'>
        <label for="password">Password</label>
      </div>
      <div class = 'col s12'>
        <button class="btn waves-effect waves-light indigo lighten-3" type="submit">Login
            <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>
</div>
